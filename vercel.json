{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.11",
        "includeFiles": [
          "models/**",
          "templates/**",
          "static/**",
          ".env",
          "utils/**",
          "config.py"
        ],
        "excludeFiles": [
          "**/__pycache__/**",
          "**/*.pyc",
          "**/*.pyo",
          "**/*.pyd"
        ]
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      },
      "dest": "/static/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "main.py",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "main.py"
    }
  ]
}
